<project>

  <target name="clean">
    <delete dir="build"/>
  </target>

  <target name="compile">
    <mkdir dir="build/classes"/>
    <javac srcdir="src" destdir="build/classes">
      <compilerarg line="-J-server -J-XX:+AggressiveOpts -J-XX:+TieredCompilation" />
    </javac>
  </target>


  <target name="jar">
    <mkdir dir="build/jar"/>
    <jar destfile="build/jar/ForkBench.jar" basedir="build/classes">
      <manifest>
	<attribute name="Main-Class" value="parfunc.ForkBench"/>
      </manifest>
    </jar>
  </target>

  <target name="run">
    <java jar="build/jar/ForkBench.jar" fork="true"/>
  </target>
  
</project>
